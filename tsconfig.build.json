{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./",
    "rootDir": "./",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "isolatedModules": false
  },
  "include": [
    "server/**/*.ts",
    "shared/**/*.ts"
  ],
  "exclude": [
    "vite.config.ts",
    "client/**/*",
    "scripts/**/*",
    "migrations/**/*",
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}