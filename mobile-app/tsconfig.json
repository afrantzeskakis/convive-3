{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@context/*": ["src/context/*"],
      "@api/*": ["src/api/*"],
      "@utils/*": ["src/utils/*"],
      "@features/*": ["src/features/*"],
      "@assets/*": ["assets/*"]
    }
  }
}